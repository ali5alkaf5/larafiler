{
    "name": "larafiler/larafiler",
    "description": "Laravel well-structured file manager",
    "type": "library",
    "version": "1.0.0",
    "require": {
        "php": ">=7.4",
        "intervention/image": "^2.7",
        "pawlox/video-thumbnail": "^3.0",
        "illuminate/database": "^8.83"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Akbar",
            "email": "ali5alkaf5@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "LaraFiler\\": "src/",
            "LaraFiler\\Facades\\": "src/Facades",
            "LaraFiler\\Database\\Migrations\\": "src/Database/Migrations"
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "orchestra/testbench": "^6.27",
        "laravel/framework": "^8.6"
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaraFiler\\Providers\\LaraFilerServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan package:discover"
        ]
    }
}
